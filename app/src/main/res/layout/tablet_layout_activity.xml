    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/NoteContentFrameLayoutID">

    </FrameLayout>

</LinearLayout>