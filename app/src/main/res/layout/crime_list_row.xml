<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
    android:background="@color/lightbrown">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewRow"

        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        android:padding="5dp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckBox_list_ctimeID"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CrimeTitle_listID"
                android:padding="4dp"
                android:textSize="18sp"

                android:textStyle="bold"

                android:layout_toLeftOf="@id/CheckBox_list_ctimeID"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/NoteContentRowID"
                android:padding="4dp"


                android:layout_below="@id/CrimeTitle_listID"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CrimeDate_listID"
                android:layout_below="@id/NoteContentRowID"
                android:padding="10dp"
                android:textSize="12sp"


                />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkTodeleteID"
            android:layout_alignParentRight="true"
            android:layout_below="@id/NoteContentRowID"
            />




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
